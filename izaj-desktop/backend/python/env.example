# =============================================================================
# IZAJ Desktop Application - Python Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# On Render/Railway, these variables are set in the service dashboard

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8002

# =============================================================================
# Supabase Configuration
# =============================================================================
# Supabase project credentials for database access
# Use the same credentials as your Node.js backend
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# =============================================================================
# Frontend URLs (for CORS)
# =============================================================================
# These are used to configure CORS allowed origins
# Railway automatically provides RAILWAY_PUBLIC_DOMAIN if deployed on Railway
FRONTEND_URL=http://localhost:3000
WEB_APP_URL=https://izaj-lighting-centre.netlify.app
NEXT_PUBLIC_APP_URL=https://izaj-lighting-centre.netlify.app

# =============================================================================
# Railway Configuration (Optional)
# =============================================================================
# Railway automatically provides this if deployed on Railway
# RAILWAY_PUBLIC_DOMAIN=your-python-service.up.railway.app

